
<div class="container">
  <h1>Welcome <%= current_user.first_name %></h1>
  <h2>Your Upcoming Trips</h2>
  <div class="boats-container" id="margin-top">
    <% if current_user.bookings.empty? %>
      <div class="add-boat">
        <h3 id="grey">You have no upcoming trips</h3>
        <%= link_to "Book Now", boats_path, class: 'btn btn-primary', id:"boat-add" %>
      </div>
    <% else %>
      <% current_user.bookings.each do |booking| %>
        <%= link_to boat_path(booking.boat), class: 'boat-card-link' do %>
          <div class="boat-card">
            <%= cl_image_tag booking.boat.photo.key, alt: booking.boat.name, class: 'boat-show-image'%>
            <div class="boat-info">
              <h2 class="boat-name"><%= booking.boat.name %></h2>
              <p class="boat-type"><%= booking.boat.boat_type %></p>
              <p class="boat-details"><%= booking.booking_date %> to <%= booking.enddate %></p>
              <p class="boat-address"><%= booking.boat.address %></p>
              <div class="price-section">
                <p class="boat-price">£<%= booking.boat.price %>/hour</p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="add-boat">
    <h2>Your Boats</h2>
    <%= link_to "Add Boat", new_boat_path, class: 'btn btn-primary', id:"boat-add" %>
  </div>
    <div class="boats-container">
      <% current_user.boats.each do |boat| %>
        <%= link_to boat_path(boat), class: 'boat-card-link' do %>
          <div class="boat boat-card">
            <%= cl_image_tag boat.photo.key, alt: boat.name, class: 'boat-image'%>
            <div class="boat-info">
              <div class="boat-name-section">
                <h2 class="boat-name"><%= boat.name %></h2>
               <%= link_to boat_path(boat), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this boat?" }, class: 'delete-boat-link' do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </div>
              <p class="boat-type"><%= boat.boat_type %></p>
              <p class="boat-details"><%= boat.details %></p>
              <p class="boat-address"><%= boat.address %></p>
              <div class="price-section">
                <p class="boat-price">£<%= boat.price %>/hour</p>
                <%= link_to 'Edit Now >', edit_boat_path(boat), class: 'book-btn' %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
