<div class="boat-show-container">
  <div class="boat-show-header">
    <h2 class="boat-show-name"><%= @boat.name %></h2>
    <p class="boat-show-type">Type: <%= @boat.boat_type %></p>
  </div>
  <div class="boat-show-image-container">
    <%= image_tag @boat.image_url, alt: @boat.name, class: 'boat-show-image' %>
  </div>
  <div class="boat-show-details">
    <p class="boat-show-text"><%= @boat.details %></p>
    <p class="boat-show-location">Location: <%= @boat.address %></p>
    <p class="boat-show-price">Â£<%= @boat.price %>/hour</p>
  </div>
  <div class="boat-show-action">
    <%= link_to '< Back to List', boats_path, class: 'boat-show-btn' %>
    <%= link_to 'Book Now >', new_boat_booking_path(boat_id: @boat.id), class: 'book-btn' %>
  </div>
</div>
