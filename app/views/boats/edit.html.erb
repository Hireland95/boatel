<div class="container">
  <div class="inline">
    <h1>Edit your boat</h1>
    <%= link_to "Delete", boat_path(@boat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "cancel"%>
  </div>
  <%= simple_form_for(@boat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :details, as: :check_boxes, collection: @details %>
  <%= f.input :boat_type, :collection => @boat_types %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Save changes" %>
<% end %>
</div>
